<div class="search">
	<form action="/search/index">
		<div>
			<label>#{attributes['label'] ? attributes['label'] + ':' : ''}
				<input type="search" name="query" value="#{Strings::to_html (request.params[:query] || "")}" /> 
				<input type="image" src="/_static/search.png" alt="Search" />
			</label>
		</div>
	</form>
</div>